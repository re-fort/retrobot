{
    "name": "retrobot",
    "description": "twitter-bot engine",
    "website": "https://github.com/re-fort/retrobot",
    "repository": "https://github.com/re-fort/retrobot",
    "success_url": "/",
    "env": {
        "CONSUMER_KEY": {
            "description": "Twitter Consumer Key",
            "required": true
        },
        "CONSUMER_SECRET": {
            "description": "Twitter Consumer Secret",
            "required": true
        },
        "ACCESS_TOKEN": {
            "description": "Twitter Access Token Key",
            "required": true
        },
        "ACCESS_SECRET": {
            "description": "Twitter Access Secret",
            "required": true
        },
        "RETRO_DAYS": {
            "description": "How days long ago do you want to see?",
            "required": true,
            "value": "365"
        },
        "DYING_MENTION_TO": {
            "description": "Send dying message as mention to this person if tweets.csv doesn't have tweets anymore",
            "required": true,
            "value": "@re_fort"
        }
    }
}